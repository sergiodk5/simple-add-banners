{
    "name": "sergiodk5/simple-add-banners",
    "description": "A simple plugin to add banners to your WordPress site",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wpify/scoper": "^3.2",
        "pestphp/pest": "^3.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "SimpleAddBanners\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "wpify/scoper": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "lint:php": "@phpcs",
        "lint:php:file": "phpcs",
        "fix:php": "@phpcbf",
        "fix:php:file": "phpcbf",
        "compat:php": "phpcs -p --standard=PHPCompatibilityWP --runtime-set testVersion 8.4- --ignore=vendor,node_modules,lib,build,dist,tests,assets/admin .",
        "scoper": "wpify-scoper install",
        "scoper:update": "wpify-scoper update",
        "scoper:clean": "rm -rf lib && rm -f composer-deps.lock",
        "test": "pest",
        "test:unit": "pest --testsuite=Unit",
        "test:coverage": "pest --coverage"
    },
    "scripts-descriptions": {
        "lint:php": "Check all PHP files against WordPress coding standards",
        "lint:php:file": "Check specific PHP file (usage: composer lint:php:file -- path/to/file.php)",
        "fix:php": "Auto-fix all PHP files",
        "fix:php:file": "Auto-fix specific PHP file (usage: composer fix:php:file -- path/to/file.php)",
        "compat:php": "Check PHP compatibility with PHP 8.4+",
        "scoper": "Install and scope runtime dependencies from composer-deps.json",
        "scoper:update": "Update and scope runtime dependencies",
        "scoper:clean": "Remove scoped dependencies",
        "test": "Run all tests",
        "test:unit": "Run unit tests only",
        "test:coverage": "Run tests with code coverage"
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "SimpleAddBanners\\Vendor",
            "folder": "lib",
            "globals": ["wordpress", "woocommerce"],
            "composerjson": "composer-deps.json",
            "composerlock": "composer-deps.lock",
            "autorun": false
        }
    }
}
