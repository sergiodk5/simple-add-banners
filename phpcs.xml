<?xml version="1.0"?>
<ruleset name="Simple Add Banners">
	<description>Coding standards for Simple Add Banners WordPress plugin</description>

	<!-- Scan all files in directory -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/build/*</exclude-pattern>
	<exclude-pattern>/dist/*</exclude-pattern>
	<exclude-pattern>/tests/*</exclude-pattern>
	<exclude-pattern>*.min.js</exclude-pattern>
	<exclude-pattern>*.min.css</exclude-pattern>

	<!-- Only check PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Show progress and sniff codes -->
	<arg value="ps"/>

	<!-- Enable colors in report -->
	<arg name="colors"/>

	<!-- Include WordPress standards -->
	<rule ref="WordPress"/>
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress-Docs"/>

	<!-- Plugin text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="simple-add-banners"/>
			</property>
		</properties>
	</rule>

	<!-- Minimum WordPress version -->
	<config name="minimum_wp_version" value="6.0"/>

	<!-- PHP version check -->
	<config name="testVersion" value="7.4-"/>
	<rule ref="PHPCompatibilityWP"/>

	<!-- Allow short array syntax (optional override) -->
	<!-- Uncomment if you prefer short array syntax -->
	<!--
	<rule ref="Generic.Arrays.DisallowShortArraySyntax.Found">
		<severity>0</severity>
	</rule>
	-->

	<!-- Prefix for hooks, functions, classes -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="simple_add_banners"/>
				<element value="Simple_Add_Banners"/>
				<element value="SIMPLE_ADD_BANNERS"/>
			</property>
		</properties>
	</rule>

	<!-- Allow certain file name exceptions -->
	<rule ref="WordPress.Files.FileName">
		<properties>
			<property name="strict_class_file_names" value="false"/>
		</properties>
		<exclude-pattern>simple-add-banners.php</exclude-pattern>
		<exclude-pattern>uninstall.php</exclude-pattern>
	</rule>
</ruleset>
